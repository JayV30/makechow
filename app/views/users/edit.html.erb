<% provide(:title, "Edit Profile of " + @user.name) %>

<div class="row">
  <h1 class="text-center">UPDATE YOUR PROFILE</h1>
</div>

<div class="row">
  <%= form_for(@user, html: { mulitpart: true }) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="col-md-4">
       <%= image_tag( @user.image_url.url(:square), alt: @user.name + " Profile Image", class: "img-responsive center-block profile-img") %>
       <%= f.label :remove_image_url, class: "checkbox inline" do %>
          <%= f.check_box :remove_image_url %>
          <span>Remove Current Image (press save to remove)</span>
        <% end %>
       <%= f.label :image_url, "Profile Image URL (5MB or less)" %>
       <%= f.file_field :image_url, class: 'form-control', accept: 'image/jpeg,image/gif,image/png' %>
    </div>
    <div class="col-md-8">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', :value => @user.name %>
      
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control', :value => @user.email %>
      
      <%= f.label :location %>
      <%= f.text_field :location, class: 'form-control', :value => @user.location %>
      
      <%= f.label :password, "New Password" %>
      <%= f.password_field :password, class: 'form-control' %>
      
      <%= f.label :password_confirmation, "Confirm New Password" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
      
      <%= f.submit "Save changes", class: "btn btn-primary" %>
    </div>
  <% end %>
</div> <!-- /.row -->