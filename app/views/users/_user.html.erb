<% if user.admin? && user.activated? %>
  <tr class="admin-row">
<% elsif !user.activated? %>
  <tr class="unactivated-row">
<% else %>
  <tr>
<% end %>
    <td><%= image_tag(user.image_url.url(:square), size: "32", alt: user.name) if user.image_url %></td>
    <td><%= user.id %></td>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.created_at.strftime("%m-%d-%Y") %></td>
    <td><%= link_to "View Profile", user, class: "btn btn-primary btn-sm", role: "button" %></td>
    <td><%= link_to "Delete User", user, method: :delete, class: "btn btn-danger btn-sm", role: "button", data: { confirm: "Are you sure you want to delete this user?" } %></td>
  </tr>