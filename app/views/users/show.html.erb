<% provide(:title, @user.name + " User Profile") %>

<div class="row">
  <div class="col-md-4">
    <p>USER PROFILE IMAGE HERE</p>
  </div>
  <div class="col-md-8">
    <h1><%= @user.name %></h1>
    <h2><%= @user.email %></h2>
  </div>
</div> <!-- /.row -->

<div class="row">
  <%= @recipes.each do |recipe| %>
    <div class="col-sm-3">
      <div class="thumbnail">
        <%= link_to image_tag(recipe.image), recipe %>
        <div class="caption">
          <h3><%= recipe.title %></h3>
          <p><%= recipe.description %></p>
        </div> <!-- /.caption -->
      </div> <!-- /.thumbnail -->
    </div> <!-- /.col-sm-3 -->
  <% end %>
</div> <!-- /.row -->