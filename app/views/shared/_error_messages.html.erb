<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <h3>Please correct the following <%= pluralize(object.errors.count, "error") %>:</h3>
      <hr/>
      <ul>
        <% object.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>