<% if review_exists?(@recipe) %>
  <%= form_for(@review) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="form-group">
      <%= f.hidden_field :recipe_id, value: @review.recipe_id %>
      <fieldset class="rating">
        <%= f.radio_button :rating, "5", :checked => @review.rating == 5 ? true : nil %>
        <%= f.label :rating, value: "5" %>
        <%= f.radio_button :rating, "4", :checked => @review.rating == 4 ? true : nil %>
        <%= f.label :rating, value: "4" %>
        <%= f.radio_button :rating, "3", :checked => @review.rating == 3 ? true : nil %>
        <%= f.label :rating, value: "3" %>
        <%= f.radio_button :rating, "2", :checked => @review.rating == 2 ? true : nil %>
        <%= f.label :rating, value: "2" %>
        <%= f.radio_button :rating, "1", :checked => @review.rating == 1 ? true : nil %>
        <%= f.label :rating, value: "1" %>
      </fieldset>
      <%= f.text_area :content, class: 'form-control', value: @review.content %>
    </div>
    <div class="row">
      <div class="col-sm-4 col-sm-offset-2">
        <%= f.submit "Update", class: "btn btn-primary btn-block" %>
      </div>
  <% end %>
      <div class="col-sm-4">
        <%= link_to "Delete", @review, method: :delete, class: "btn btn-danger btn-block", role: "button" %>
      </div>
    </div>
<% else %>
  <%= form_for(@review) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="form-group">
      <%= f.hidden_field :recipe_id, value: params[:id] %>
      <fieldset class="rating">
        <%= f.radio_button :rating, "5" %>
        <%= f.label :rating, value: "5" %>
        <%= f.radio_button :rating, "4" %>
        <%= f.label :rating, value: "4" %>
        <%= f.radio_button :rating, "3" %>
        <%= f.label :rating, value: "3" %>
        <%= f.radio_button :rating, "2" %>
        <%= f.label :rating, value: "2" %>
        <%= f.radio_button :rating, "1" %>
        <%= f.label :rating, value: "1" %>
      </fieldset>
      <%= f.text_area :content, class: 'form-control', placeholder: "Your review" %>
    </div>
    <%= f.submit "Submit", class: "btn btn-primary" %>
  <% end %>
<% end %>