<div class="col-xs-6 col-sm-4 col-md-3" id="recipe-<%= recipe.id %>">
  <div class="thumbnail">
  <%= link_to(recipe) do %>
    <div class="thumb-img">
      <%= image_tag(recipe.image_url.url, alt: recipe.title, class: "img") if recipe.image_url? %>
      <% if recipe.hidden == true %>
        <h2 class="warning-bar">PRIVATE</h2>
      <% end %>
    </div>
    <div class="caption">
      <h3><%= recipe.title %></h3>
      <div class="rating-display">
        <% case avg_rating(recipe) %>
        <% when 4.1..5 %>
          <span class="filled-star"></span>
          <span class="filled-star"></span>
          <span class="filled-star"></span>
          <span class="filled-star"></span>
          <span class="filled-star"></span>
        <% when 3.1..4 %>
          <span></span>
          <span class="filled-star"></span>
          <span class="filled-star"></span>
          <span class="filled-star"></span>
          <span class="filled-star"></span>
        <% when 2.1..3 %>
          <span></span>
          <span></span>
          <span class="filled-star"></span>
          <span class="filled-star"></span>
          <span class="filled-star"></span>
        <% when 1.1..2 %>
          <span></span>
          <span></span>
          <span></span>
          <span class="filled-star"></span>
          <span class="filled-star"></span>
        <% when 0.1..1 %>
          <span></span>
          <span></span>
          <span></span>
          <span></span>
          <span class="filled-star"></span>
        <% else %>
          <span></span>
          <span></span>
          <span></span>
          <span></span>
          <span></span>
        <% end %>
      </div><!-- /.rating-display -->
    </div> <!-- /.caption -->
    <div class="overlay">
      <% if recipe.description.length < 121 %>
        <p><%= recipe.description %></p>
      <% else %>
        <p><%= recipe.description[0...120].concat("...") %></p>
      <% end %>
    </div>
  <% end %>
  <% if logged_in? && current_user?(recipe.user) %>
    <div class="recipe-buttons text-right">
      <%= link_to "Edit", edit_recipe_path(recipe.id), class: "btn btn-primary btn-sm", role: "button" %>
      <%= link_to "Delete", recipe, method: :delete, class: "btn btn-danger btn-sm", role: "button", data: { confirm: "Are you sure you want to delete this recipe?" } %>
    </div> <!-- /.recipe-buttons -->
  <% end %>
  </div> <!-- /.thumbnail -->
</div> <!-- /.col-sm-3 -->
