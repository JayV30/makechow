<% provide(:title, @collection.name) %>

<div class="row">
  <div class="col-sm-6">
    <div class="page-header">
      <h1><%= @collection.name %></h1>
      <p><%= @collection.description %></p>  
    </div><!-- /.page-header -->
  </div><!-- /.col-sm-6 -->
  <div class="col-sm-6">
    <div class="well" style="min-height: 100px; width: 100%">
      <p>AD SPACE HERE</p>
    </div>
  </div><!-- /.col-sm-6 -->
</div><!-- /.row -->


<div class="row collection-recipes">
  <% if @recipes.count == 0 %>
    <div class="col-md-12">
      <h3>No recipes in <%= @collection.name %></h3>
    </div>
  <% else %>
    <%= render @recipes %>
  <% end %>
</div> <!-- /.row -->

<div class="row text-center">
  <div class="col-xs-12">
    <%= will_paginate @recipes, inner_window: 1, renderer: BootstrapPagination::Rails %>
  </div>
</div>